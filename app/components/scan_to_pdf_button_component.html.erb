  <div class="row scan-to-pdf">
    <div class="col-12 buttons">
      <%= link_to 'Scan to PDF', path, class: 'btn btn-md btn-info', 'aria-describedby' => 'scanDescription' %>
    </div>
    <div id="scanDescription" class="col-12 content">
      <p>Limited to one article/chapter, not to exceed 50 pages or 10% of the work.</p>
      <p>Available to faculty, staff, students, post-docs, fellows, and Stanford Visiting Scholars.</p>
      <% if estimate_delivery? %>
        <dl>
          <dt>Earliest delivery</dt>
          <%= tag.dd data: { single_library_value: single_destination_value } do %>
            <%= tag.span data: { scheduler_text: 'true' }, aria: { live: 'polite' }%>
          <% end %>
        </dl>
      <% else %>
        <p>No delivery estimate.</p>
      <% end %>
    </div>
  </div>
