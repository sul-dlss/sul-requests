<div class="card border-light">
  <h3 class="card-header text-green border-light"><%= appointment_time_range %></h3>
  <div class="card-body">
    <ul class="list-group list-group-flush">
      <% appointment.requests.each do |request| %>
        <li class="list-group-item">
          <h4><%= request.title %></h4>
          <div class="d-flex flex-row align-items-center">
            <div class="me-4">Call number: <%= request.call_number %></div>

          <% if request.volume %>
            <span class="p-1 px-2 bg-stanford-10-black fw-semibold">
              <%= request.volume %>
            </span>
          <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
