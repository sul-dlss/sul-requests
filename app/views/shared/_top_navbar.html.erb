<%= render 'layouts/top_navbar' do %>
  <ul class="navbar-nav ml-auto">
    <li class="nav-item">
      <% if current_user.webauth_user? %>
        <%= link_to "#{current_user.webauth}: Logout", logout_path(referrer: root_path), class: 'nav-link' %>
      <% else %>
        <%= link_to "Login", login_path(referrer: request.original_url), class: 'nav-link' %>
      <% end %>
    </li>
    <li class="nav-item"><a class="nav-link" href='https://library.stanford.edu/myaccount'>My Account</a></li>
    <li class="nav-item"><a class="nav-link" href='https://searchworks.stanford.edu/feedback'>Feedback</a></li>
  </ul>
<% end %>
