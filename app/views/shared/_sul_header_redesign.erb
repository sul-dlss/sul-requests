<!-- SUL header -->
<div id="sul-header" class="navbar navbar-expand bg-dark bg-cardinal py-1 fs-7">
  <div class="container d-flex flex-column flex-sm-row gap-1 gap-sm-0 justify-content-between align-items-center">
    <a class="mb-0 navbar-brand navbar-logo" href="https://library.stanford.edu" aria-label="Stanford University Libraries"></a>
    <nav aria-label="header menu">
      <ul class="navbar-nav">
        <% if current_user.sso_user? || current_user.library_id_user? %>
          <% logout_path = current_user.site_admin? ? root_path : request.url %>
          <li class="nav-item">
            <%= link_to t('shared.sul_header.logout', sunetid: current_user.sunetid || current_user.library_id), logout_path(referrer: logout_path), class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to t('shared.sul_header.login'), login_by_sunetid_path(referrer: request.original_url), class: 'nav-link' %>
          </li>
        <% end %>
        <% unless current_page?(feedback_form_path) %>
          <li class="nav-item">
            <%= link_to "#feedback-form", role: 'button', data: {'bs-toggle':"collapse", 'bs-target':"#feedback-form"}, class: 'nav-link' do %>
              Feedback
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>
<div id="feedback-form" class="feedback-form-container collapse">
    <%= render template: 'feedback_forms/new' unless current_page?(feedback_form_path) %>
</div>
