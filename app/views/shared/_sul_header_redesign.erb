<!-- SUL header -->
<nav class="navbar navbar-expand-md bg-dark bg-cardinal" data-turbo-prefetch="false">
  <div class="container">
    <a class="mb-0 navbar-brand navbar-logo" href="https://library.stanford.edu" aria-label="Stanford University Libraries"></a>    <nav aria-label="header menu">
    <button class="navbar-toggler navbar-toggler-right collapsed" type="button" data-toggle="collapse" data-bs-toggle="collapse" data-target="#user-util-collapse" data-bs-target="#user-util-collapse" aria-controls="user-util-collapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="d-md-block d-none">
      <ul class="navbar-nav">
        <% if current_user.sso_user? || current_user.library_id_user? %>
          <% logout_path = current_user.site_admin? ? root_path : request.url %>
          <li class="nav-item">
            <%= link_to t('shared.sul_header.logout', sunetid: current_user.sunetid || current_user.library_id), logout_path(referrer: logout_path), class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to t('shared.sul_header.login'), login_by_sunetid_path(referrer: request.original_url), class: 'nav-link' %>
          </li>
        <% end %>
        <% unless current_page?(feedback_form_path) %>
          <li class="nav-item">
            <%= link_to "#feedback-form", role: 'button', data: {'bs-toggle':"collapse", 'bs-target':"#feedback-form"}, class: 'nav-link' do %>
              Feedback
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
