<%= bootstrap_form_for(@scan, bootstrap_form_layout_options) do |f| %>
  <% unless @scan.persisted? %>
    <%= render partial: 'hidden_form_fields', locals: { f: f } %>
  <% end %>
  <%= f.fields_for :data do |d| %>
    <%= d.text_field :page_range, help: 'Example: 1-5, 8, 7-13' %>
    <%= d.text_area :section_title, rows: '3', label: 'Article title' %>
    <%= d.text_field :authors, label: 'Author(s)' %>
  <% end %>

  <%= f.submit %>
<% end %>
