<%= bootstrap_form_for(@scan, bootstrap_form_layout_options) do |f| %>
  <% unless @scan.persisted? %>
    <%= render partial: 'hidden_form_fields', locals: { f: f } %>
  <% end %>

  <%= render partial: 'shared/item_selector', locals: { f: f } %>

  <%= f.text_field :page_range, help: 'Example: 1-5, 8, 7-13', label: t('forms.labels.page_range') %>
  <%= f.text_area :section_title, rows: '3', label: t('forms.labels.section_title') %>
  <%= f.text_field :authors, label: t('forms.labels.authors') %>

  <%= render partial: 'copyright_restrictions' %>
  <%= render partial: 'shared/send_request_buttons', locals: { f: f } %>
<% end %>
