<%= bootstrap_form_for(current_request, bootstrap_form_layout_options) do |f| %>
  <% unless current_request.persisted? %>
    <%= render partial: 'hidden_form_fields', locals: { f: f } %>
  <% end %>

  <%= render partial: 'shared/item_selector', locals: { f: f } %>

  <%= select_for_pickup_libraries(f).html_safe %>
  <% if current_request.commentable? %>
    <%= f.fields_for :data do |d| %>
      <%= d.text_area :comments, rows: 3 %>
    <% end %>
  <% end %>

  <%= f.date_field :needed_date, label: t('forms.labels.hold_recall.needed_date') %>

  <%= render partial: 'shared/send_request_buttons', locals: { f: f } %>
<% end %>
