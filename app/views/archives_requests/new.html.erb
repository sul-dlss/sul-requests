<% step_enum = Enumerator.new { |y| n = 0; loop { y << (n += 1) } } %>
<div class="container mt-4">
  <h1>New request</h1>
  <div class="row">
    <div class="col-8">
      <div class="card mb-4 bg-light">
        <div class="card-body">
          <h2><%= @ead.title || 'Not available' %></h2>
          <p>Identifier: <%= @ead.identifier || 'Not available' %></p>
          <p>Repository: <%= @ead.repository || 'Not available' %></p>
          <%# TODO: <p>Date Range: 1962-2018</p> %>
          <p>Extent: <%= @ead.extent || 'Not available' %></p>
          <p>Creator: <%= @ead.creator || 'Not available' %></p>
          <p>Languages: <%= @ead.languages || 'Not available' %></p>
          <p>Conditions Governing Use: <%= @ead.conditions_governing_use || 'Not available' %></p>
          <p>Conditions Governing Access: <%= @ead.conditions_governing_access || 'Not available' %></p>
          <p>Cite As: <%= @ead.cite_as || 'Not available' %></p>
          <p>Source URL: <%= @ead.url %></p>
        </div>
      </div>
      <%= form_with id: 'archives-request', url: archives_requests_path, class: 'accordion', data: { controller: 'patronRequest archives-request', turbo: false } do |f| %>
        <%= render AccordionStepComponent.new(id: 'request_type', step_index: step_enum.next, form_id: f.id) do |component| %>
          <% component.with_title.with_content('Request type') %>
          <% component.with_body do %>
            <fieldset class="mb-4">
              <legend class="fs-6"></legend>
              <div>
                <%= f.radio_button :request_type, 'pickup', :class => 'form-check-input', :required => true, data: { action: 'patronRequest#updateType archives-request#updateRequestType' } %>
                <%= f.label :request_type_pickup, :class => 'form-check-label ms-1' do %>
                  Reading room appointment
                <% end %>
                <span class="text-cardinal ms-2 mt-1">
                  Earliest appointment available:
                  <turbo-frame id="earliest_appointment" src="/aeon_appointments/available/<%= @ead_request.reading_room&.id %>/<%= Date.today %>"></turbo-frame>
                </span>
              </div>
              <div class="mt-4">
                <%= f.radio_button :request_type, 'scan', :class => 'form-check-input', data: { action: 'patronRequest#updateType archives-request#updateRequestType' } %>
                <%= f.label :request_type_scan, :class => 'form-check-label ms-1' do %>
                  Digitization
                <% end %>
              </div>
            </fieldset>
          <% end %>
        <% end %>
        <% if @ead.series_and_subseries&.any? %>
          <%= render AccordionStepComponent.new(id: 'items', step_index: step_enum.next, form_id: f.id) do |component| %>
            <% component.with_title.with_content('Items') %>
            <% component.with_body do %>
              <div data-controller="archives-series">
                <div>
                  <button class="btn btn-sm btn-link ps-0 su-underline" data-action="click->archives-series#expandAll">Expand all (see full content list)</button>
                  <button class="btn btn-sm btn-link  su-underline" data-action="click->archives-series#collapseAll">Collapse all</button>
                </div>
                <%# Loop through each series in the collection %>
                <% @ead.series_and_subseries.each_with_index do |series, index| %>
                  <div class="mb-2">
                    <%# Collapsible series header %>
                    <%= link_to "#series-#{index}", 
                        class: "series-header text-decoration-none d-block",
                        data: { bs_toggle: 'collapse' },
                        aria: { expanded: false, controls: "series-#{index}" } do %>
                      <i class="bi bi-chevron-right"></i>
                      <span class="fs-5"><%= series[:title] %></span>
                      <span class="rounded px-2 fs-6 bg-light text-dark fw-normal"><%= series[:items].count %></span>
                    <% end %>
                    <%# Collapsible series content %>
                    <div id="series-<%= index %>" class="collapse series-content ms-3 ps-1" data-archives-series-target="content">
                      <% if series[:items]&.any? %>
                        <% series[:items].slice_when { |item_a, item_b| item_a.box != item_b.box}.each do |items| %>
                          <% if items.first.box %>
                            <%# Display box header with checkbox %>
                            <% series_title = series[:title].truncate(30) %>
                            <%# volume_value = "#{series_prefix}: Box #{items.first.box}" %>
                             <% volume_value = {
                              series: series_title,
                              subseries: items.first.box
                             }.to_json
                             %>
                            <% checkbox_id = "volumes_#{series_title.parameterize}_box_#{items.first.box}" %>
                            <div class="mt-3 mb-2">
                              <%= f.check_box :volumes, { multiple: true, class: 'form-check-input me-2', id: checkbox_id, data: { action: 'change->archives-request#updateVolumesDisplay' } }, volume_value, nil %>
                              <%= label_tag checkbox_id, "Box #{items.first.box}", class: 'form-check-label fw-bold' %>
                            </div>
                            <%# Open list for this box's items %>
                            <ul class="list-unstyled ms-4">
                              <% items.each do |item| %>
                                <li class="mb-1">
                                  <% folder_info = item.folder %>
                                  <% if folder_info %>
                                    <small class="text-muted">Folder <%= item.folder %>:</small>
                                  <% end %>
                                  <%= item.title %>
                                </li>
                              <% end %>
                            </ul>
                          <% else %>
                            <%# Items without containers %>
                            <% items.each do |item| %>
                              <div class="mt-3 mb-2"><strong><%= item.title %></strong></div>
                            <% end %>
                          <% end %>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <%= render AccordionStepComponent.new(id: 'submit', step_index: step_enum.next, form_id: f.id, submit: true, submit_text: 'Submit to Aeon', cancel: false) do |component| %>
          <% component.with_title.with_content('Review and submit') %>
          <% component.with_body do %>
            <div class="mb-4">
              <h4 class="fs-6 fw-bold mb-3">Request Summary</h4>
              <dl class="row">
                <dt class="col-sm-4">Collection:</dt>
                <dd class="col-sm-8"><%= @ead.title %></dd>
                <dt class="col-sm-4">Identifier:</dt>
                <dd class="col-sm-8"><%= @ead.identifier %></dd>
                <dt class="col-sm-4">Repository:</dt>
                <dd class="col-sm-8"><%= @ead.repository %></dd>
                <dt class="col-sm-4">Request type:</dt>
                <dd class="col-sm-8">
                  <span data-archives-request-target="requestTypeDisplay" class="text-muted">Select a request type above</span>
                </dd>
                <dt class="col-sm-4">Selected items:</dt>
                <dd class="col-sm-8">
                  <ul data-archives-request-target="volumesDisplay" class="list-unstyled mb-0">
                    <li class="text-muted">No items selected</li>
                  </ul>
                </dd>
              </dl>
            </div>
            <%= f.hidden_field :ead_url, value: @ead.url %>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="col-4">
      <h2>Contact information</h2>
      <div>
        <% if @ead.repository %>
          <h3><%= link_to @ead.repository, @ead.repository_contact[:website] %></h3>
        <% end %>
        <% if @ead.repository_contact[:address] %>
          <p>
            <% @ead.repository_contact[:address].each do |line| %>
              <%= line %><br>
            <% end %>
          </p>
        <% end %>
        <% if @ead.repository_contact[:email] %>
          <p>
            Email: <%= mail_to @ead.repository_contact[:email] %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
