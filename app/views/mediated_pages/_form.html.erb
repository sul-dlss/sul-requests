<%= bootstrap_form_for(current_request, request_form_options) do |f| %>
  <% unless current_request.persisted? %>
    <%= render partial: 'hidden_form_fields', locals: { f: f } %>
  <% end %>

  <%= render partial: 'shared/item_selector', locals: { f: f } %>

  <%= select_for_pickup_libraries(f).html_safe %>

  <% if current_request.request_commentable? %>
    <%= f.text_area :request_comment, rows: 3, label: label_for_comments_field %>
  <% end %>

  <%= f.date_field :needed_date, label: t('forms.labels.needed_date') %>

  <%= render partial: 'shared/send_request_buttons', locals: { f: f } %>
<% end %>
