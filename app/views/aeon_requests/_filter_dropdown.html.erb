<div class="dropdown">
  <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    <%= AeonFilterable::FILTER_OPTIONS[current_aeon_filter][:label] %>
  </button>
  <ul class="dropdown-menu" role="menu">
    <% AeonFilterable::FILTER_OPTIONS.each do |key, option| %>
      <li>
        <%= link_to url_for(request.query_parameters.merge(filter: key)), class: "dropdown-item #{'active' if current_aeon_filter == key}" do %>
          <%= option[:label] %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
