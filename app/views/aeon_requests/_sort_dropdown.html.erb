<div class="dropdown mb-3">
  <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    <%= AeonSortable::SORT_OPTIONS[current_aeon_sort][:label] %>
  </button>
  <ul class="dropdown-menu" role="menu">
    <% AeonSortable::SORT_OPTIONS.each do |key, option| %>
      <li>
        <%= link_to url_for(sort: key), class: "dropdown-item #{'active' if current_aeon_sort == key}" do %>
          <%= option[:label] %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
