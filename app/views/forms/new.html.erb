<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
		<title>Request Type Info</title>
	</head>
	<body>
		
		<h1>Request Form Text Input Form</h1>
		<% unless flash[:notice].blank?%>
			<div id="notification"><%= flash[:notice] %></div>
		<% end %>
		<%= error_messages_for 'form' %>
		<% form_for (:form, @form, :url => { :action => 'create'}) do |f| %>
					
		<table>
			<tr>
				<td nowrap valign="top" align="right">Form ID:</td>
			 	<td valign="top"><%= f.text_field :form_id %></td>
			 <tr>
			 <tr>
				<td nowrap valign="top" align="right">Title:</td>
				 <td valign="top"><%= f.text_field :title %></td>
			</tr>
			
			 <tr>
				<td nowrap valign="top" align="right">Heading:</td>
				 <td valign="top"><%= f.text_field :heading %></td>
			</tr>
			
			 <tr>
				<td nowrap valign="top" align="right">Introductory Text</td>
				 <td valign="top"><%= f.text_area :before_fields %></td>
			</tr>
			
			 <tr>
				<td nowrap valign="top" align="right">Final Text</td>
				 <td valign="top"><%= f.text_area :after_fields %></td>
			</tr>	
					
			<tr>		
				<td colspan=2><%= submit_tag "Save"  %></td>
			</tr>
			</table>

		<% end %>			
		
		
		
	</body>
</html>
