<% unless f.object.requestable_with_sunet_only?  %>
  <div data-no-sunet-content='true' style='display:none;'>
    <%= f.fields_for :user, User.new do |uf| %>
      <% if f.object.requestable_with_library_id? %>
        <%= uf.text_field :library_id %>
      <% end  %>
      <% if f.object.requestable_by_all? %>
        <div class='form-group'>
          <div class='<%= "#{label_column_offset_class} #{content_column_class}" %>'>
            <h3>Donâ€™t have a Library ID?</h3>
            <p>Just let us know your name and email.</p>
          </div>
        </div>
        <%= uf.text_field :name %>
        <%= uf.email_field :email %>
      <% end %>
    <% end %>
    <%= f.submit 'Send request', class: "btn btn-md btn-cardinal #{content_column_class} #{label_column_offset_class}" %>
  </div>
  <%= render partial: 'shared/back_to_login' %>
<% end %>
