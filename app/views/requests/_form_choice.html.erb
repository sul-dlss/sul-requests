<div id="scan-or-deliver">
  <div class="row">
    <div class="col-xs-12 col-sm-6 buttons">
      <%= link_to('Deliver to campus library', delegated_new_request_path(current_request), class: 'btn btn-md btn-primary', 'aria-describedby' => 'deliveryDescription') %>
    </div>
    <div class="col-xs-12 col-sm-6 content" data-scheduler-lookup-url='<%= paging_schedule_path(origin: current_request.origin) %>'>
      <dl id="deliveryDescription">
        <dt>Earliest delivery</dt>
        <dd data-single-library-value='<%= SULRequests::Application.config.default_pickup_library %>'>
          <span id='scheduler-text' data-scheduler-text='true' aria-live='polite'></span>
        </dd>
      </dl>
    </div>
  </div>
  <div class="separator">
    <h2>Just need a chapter or article?</h2>
  </div>
  <div class="row scan-to-pdf">
    <div class="col-xs-12 col-sm-6 buttons">
      <%= link_to('Scan to PDF<span class="btn-sub-text">requires SUNet login</span>'.html_safe, new_scan_path(current_request, params.except(:controller, :action)), class: 'btn btn-md btn-default', 'aria-describedby' => 'scanDescription') %>
    </div>
    <div class="col-xs-12 col-sm-6 content">
      <dl id="scanDescription">
        <dt>Earliest delivery</dt>
        <dd>Unknown</dd>
        <dt>Copyright limit</dt>
        <dd>One article or chapter; maximum 50 pages.</dd>
        <dt>Pilot service</dt>
        <dd>Available to faculty, grad students, postdocs, academic staff, fellows, and visiting scholars.</dd>
      </dl>
    </div>
  </div>
</div>
