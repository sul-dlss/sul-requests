<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
		<title>Library Input Form</title>
	</head>
	<body>
		
		<%= render :partial => 'header' %> 
		
		<h1>Library Input Form</h1>
		<% unless flash[:notice].blank?%>
			<div id="notification"><%= flash[:notice] %></div>
		<% end %>
		<% if !@library.nil? and @library.errors.any? %>
		  <ul>
		    <% @library.errors.full_messages.each do |msg| %>
		      <li><%= msg %></li>
		    <% end %>
		  </ul>
		<% end %>
		
		<%= form_for( @library, as: :library, :url => { :action => 'create'}) do |f| %>
					
		<table>
			<tr>
				<td nowrap valign="top" align="right">Library Code:</td>
			 	<td valign="top"><%= f.text_field :lib_code %></td>
			 <tr>
			 <tr>
				<td nowrap valign="top" align="right">Library Name:</td>
				 <td valign="top"><%= f.text_field :lib_descrip %></td>
			</tr>
			
				
			<tr>		
				<td colspan=2><%= submit_tag "Save"  %></td>
			</tr>
			</table>

		<% end %>			
		
		
		
	</body>
</html>
