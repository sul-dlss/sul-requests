<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
		<title>Request Test Input Form</title>
	</head>
	<body>
		<%= render :partial => 'header' %> 
		<h1>Request Test Edit Form</h1>
		<% unless flash[:notice].blank?%>
			<div id="notification"><%= flash[:notice] %></div>
		<% end %>
		<% if @reqtest.errors.any? %>
		  <ul>
		    <% @reqtest.errors.full_messages.each do |msg| %>
		      <li><%= msg %></li>
		    <% end %>
		  </ul>
		<% end %>

		
		<p></p>
		<%= form_for ( [:admin, @reqtest ]) do |f| %>

		<table>
			 <tr>
				<td nowrap valign="top" align="right">Socrates Link:</td>
			 	<td valign="top" colspan=2><%= f.text_field :socrates_link, :size => 53 %></td>			</tr>
			 <tr>
				<td nowrap valign="top" align="right">Form Status:</td>
				<td colspan=2><%= select_tag('reqtest[form_status]', options_for_select([['UNDETERMINED', 'UNDETERMINED'], ['OK', 'OK'], ['NOT OK', 'NOT OK']], :selected => @reqtest.form_status) ) %></td>	 	
			</tr>			
			 <tr>
				<td nowrap valign="top" align="right">Request Status:</td>
				 <td valign="top" colspan=2><%= select_tag('reqtest[request_status]', options_for_select([['UNDETERMINED', 'UNDETERMINED'], ['OK', 'OK'], ['NOT OK', 'NOT OK']], :selected => @reqtest.request_status) ) %></td>
			</tr>			
			 <tr>
				<td nowrap valign="top" align="right">Comments:</td>
				 <td valign="top" colspan=2><%= f.text_area :comments, :cols => 40, :rows => 10 %></td>
			</tr>
				
			<tr>		
				<td colspan=3><%= submit_tag "Save"  %></td>
			</tr>
			</table>

		<% end %>			
		
		
		<%= render 'shared/mouseflow' %>
	</body>
</html>
