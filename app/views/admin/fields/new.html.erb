<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
		<title>Field Input Form</title>
	</head>
	<body>
		<%= render :partial => 'header' %> 
		<h1>Field Input Form</h1>
		<% unless flash[:notice].blank?%>
			<div id="notification"><%= flash[:notice] %></div>
		<% end %>
		<%= error_messages_for 'field' %>
		<% form_for (:field, @field, :url => { :action => 'create'}) do |f| %>

		<table>
			<tr>
				<td nowrap valign="top" align="right">Field Name:</td>
			 	<td valign="top"><%= f.text_field :name %></td>
			 <tr>
			 <tr>
				<td nowrap valign="top" align="right">Field Label:</td>
				 <td valign="top"><%= f.text_field :label %></td>
			</tr>			
			 <tr>
				<td nowrap valign="top" align="right">Field Order:</td>
				 <td valign="top"><%= f.text_field :order %></td>
			</tr>			
	
				
			<tr>		
				<td colspan=2><%= submit_tag "Save"  %></td>
			</tr>
			</table>

		<% end %>			
		
		
		
	</body>
</html>
