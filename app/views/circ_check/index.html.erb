<html>
  <head>
    <title>Check Circulation</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="description" content="Stanford University Libraries' application check the circulation status of an item" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script type="module">
      import hotwiredTurbo from 'https://cdn.skypack.dev/@hotwired/turbo';
    </script>
    <style>
      .toast {
        --bs-toast-max-width: 700px;
        --bs-toast-header-bg: rgba(var(--bs-body-bg-rgb), 0.85);
        --bs-toast-bg: rgba(var(--bs-body-bg-rgb), 0.85);
      }
    </style>
  </head>
  <body>
    <header class="bg-dark py-3">
      <div class="container-fluid"><h1 class="fs-4 text-white">SUL Circulation Check</h1></div>
    </header>
    <div class="container mt-4">
      <turbo-frame id="circForm">
        <%= form_with url: '/circ-check' do |form| %>
          <div class="row g-3 align-items-start">
            <div class="col-auto">
              <div class="form-floating mb-3">
                <input type="text" class="form-control" id="barcode" name="barcode" aria-describedby="barcodeHelp" autofocus>
                <label for="barcode">Barcode</label>
              </div>
              <div id="barcodeHelp" class="form-text">Enter the barcode of the item you want to check.</div>
            </div>
            <div class="col-auto">
              <button type="submit" class="btn btn-primary">Check</button>
            </div>
          </div>
        <% end %>
        <div class="toast-container" id="results">
        </div>
      </turbo-frame>
    </div>
  </body>
</html>
