<turbo-stream action="prepend" target="results">
  <template>
    <% if @item.dig('status', 'name') == 'Checked out' %>
      <%= render 'toast_success', item: @item %>
    <% else %>
      <%= render 'toast_failure', item: @item %>
    <% end %>

    <script type="text/javascript">
      document.getElementById('barcode').value = '';
    </script>
  </template>
</turbo-stream>
